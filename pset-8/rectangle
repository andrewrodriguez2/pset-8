import java.lang.Math; 
import java.util.Scanner;
public class Main {    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);        
		System.out.print("What's the top length?");        
		double top = in.nextInt();        
		System.out.print("What's the bottom length?");        
		double bottom = in.nextInt();        
		System.out.print("What's the height?");        
		double height = in.nextInt();        
		double area = ((top + bottom)/2) * height;        
		double areaf = Math.round(area*100.0)/100.0;        
		System.out.println("The area of the trapezoid is " + areaf + ".");        
		in.close();    
		}
		} 